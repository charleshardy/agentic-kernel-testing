# Development Environment Configuration

# General Settings
DEBUG=true
LOG_LEVEL=DEBUG

# LLM Configuration
LLM__PROVIDER=openai
LLM__MODEL=gpt-3.5-turbo  # Use cheaper model for development
LLM__TEMPERATURE=0.7
LLM__MAX_TOKENS=1000

# Database Configuration
DATABASE__TYPE=sqlite
DATABASE__NAME=agentic_testing_dev.db

# Execution Configuration
EXECUTION__MAX_PARALLEL_TESTS=3  # Reduced for development
EXECUTION__TEST_TIMEOUT=60
EXECUTION__VIRTUAL_ENV_ENABLED=true
EXECUTION__PHYSICAL_HW_ENABLED=false

# Coverage Configuration
COVERAGE__ENABLED=true
COVERAGE__MIN_LINE_COVERAGE=0.5  # Relaxed for development
COVERAGE__MIN_BRANCH_COVERAGE=0.4

# Security Configuration
SECURITY__FUZZING_ENABLED=false  # Disabled for faster development
SECURITY__STATIC_ANALYSIS_ENABLED=true
SECURITY__MAX_FUZZ_TIME=300

# Performance Configuration
PERFORMANCE__ENABLED=false  # Disabled for development
PERFORMANCE__REGRESSION_THRESHOLD=0.2
PERFORMANCE__BENCHMARK_ITERATIONS=1

# Notification Configuration
NOTIFICATION__ENABLED=false  # Disabled for development
NOTIFICATION__EMAIL_ENABLED=false
NOTIFICATION__SLACK_ENABLED=false

# API Configuration
API__DEBUG=true
API__DOCS_ENABLED=true
API__RATE_LIMIT_ENABLED=false