# Agentic AI Testing System Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# =============================================================================
# LLM PROVIDER CONFIGURATION
# =============================================================================

# Primary LLM Provider (openai, anthropic, amazon_q, kiro, bedrock)
LLM__PROVIDER=amazon_q

# -----------------------------------------------------------------------------
# Amazon Q Developer Pro Configuration (Recommended for Enterprise)
# -----------------------------------------------------------------------------
# AWS SSO Configuration (Preferred Method)
AWS_PROFILE=my-sso-profile
AWS_REGION=us-east-1
AWS_SSO_START_URL=https://my-company.awsapps.com/start
AWS_SSO_REGION=us-east-1
AWS_SSO_ACCOUNT_ID=123456789012
AWS_SSO_ROLE_NAME=AmazonQDeveloperAccess

# Amazon Q Developer Settings
AMAZON_Q__REGION=us-east-1
AMAZON_Q__MODEL=amazon.titan-text-express-v1
AMAZON_Q__MAX_TOKENS=2000
AMAZON_Q__TEMPERATURE=0.7

# Alternative: Direct AWS Credentials (Not recommended for production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# -----------------------------------------------------------------------------
# Kiro AI Configuration (IDE Integration)
# -----------------------------------------------------------------------------
# OAuth2 SSO Configuration
KIRO__CLIENT_ID=your-kiro-client-id
KIRO__CLIENT_SECRET=your-kiro-client-secret
KIRO__REDIRECT_URI=http://localhost:8080/callback
KIRO__SCOPE=read write

# Alternative: API Key Method
# KIRO__API_KEY=your-kiro-api-key

# Kiro Settings
KIRO__MODEL=kiro-advanced
KIRO__MAX_TOKENS=2000
KIRO__TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# OpenAI Configuration
# -----------------------------------------------------------------------------
OPENAI__API_KEY=sk-your-openai-api-key-here
OPENAI__MODEL=gpt-4
OPENAI__TEMPERATURE=0.7
OPENAI__MAX_TOKENS=2000
OPENAI__ORGANIZATION=your-org-id

# -----------------------------------------------------------------------------
# Anthropic Configuration
# -----------------------------------------------------------------------------
ANTHROPIC__API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC__MODEL=claude-3-opus-20240229
ANTHROPIC__MAX_TOKENS=2000
ANTHROPIC__TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Amazon Bedrock Configuration (Alternative to Amazon Q)
# -----------------------------------------------------------------------------
BEDROCK__REGION=us-east-1
BEDROCK__MODEL=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK__MAX_TOKENS=2000
BEDROCK__TEMPERATURE=0.7

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE__TYPE=sqlite
DATABASE__NAME=agentic_testing.db

# PostgreSQL Configuration (Production)
# DATABASE__TYPE=postgresql
# DATABASE__HOST=localhost
# DATABASE__PORT=5432
# DATABASE__USER=postgres
# DATABASE__PASSWORD=your-secure-password
# DATABASE__NAME=agentic_testing

# =============================================================================
# EXECUTION CONFIGURATION
# =============================================================================
EXECUTION__MAX_PARALLEL_TESTS=10
EXECUTION__TEST_TIMEOUT=300
EXECUTION__VIRTUAL_ENV_ENABLED=true
EXECUTION__PHYSICAL_HW_ENABLED=false

# Virtual Environment Settings
EXECUTION__QEMU_ENABLED=true
EXECUTION__KVM_ENABLED=true
EXECUTION__DOCKER_ENABLED=true

# Physical Hardware Lab Settings
# EXECUTION__HW_LAB_SSH_HOST=hardware-lab.company.com
# EXECUTION__HW_LAB_SSH_USER=testuser
# EXECUTION__HW_LAB_SSH_KEY_PATH=/path/to/ssh/key
# EXECUTION__HW_LAB_SERIAL_HOST=serial-console.company.com
# EXECUTION__HW_LAB_POWER_CONTROL_URL=http://power-control.company.com

# =============================================================================
# COVERAGE CONFIGURATION
# =============================================================================
COVERAGE__ENABLED=true
COVERAGE__MIN_LINE_COVERAGE=0.7
COVERAGE__MIN_BRANCH_COVERAGE=0.6
COVERAGE__MIN_FUNCTION_COVERAGE=0.8
COVERAGE__REPORT_FORMAT=html,json,lcov

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SECURITY__FUZZING_ENABLED=true
SECURITY__STATIC_ANALYSIS_ENABLED=true
SECURITY__MAX_FUZZ_TIME=3600
SECURITY__SYZKALLER_ENABLED=true
SECURITY__COCCINELLE_ENABLED=true
SECURITY__KASAN_ENABLED=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
PERFORMANCE__ENABLED=true
PERFORMANCE__REGRESSION_THRESHOLD=0.1
PERFORMANCE__BENCHMARK_ITERATIONS=5
PERFORMANCE__LMBENCH_ENABLED=true
PERFORMANCE__FIO_ENABLED=true
PERFORMANCE__NETPERF_ENABLED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION__ENABLED=true
NOTIFICATION__EMAIL_ENABLED=false
NOTIFICATION__SLACK_ENABLED=false
NOTIFICATION__TEAMS_ENABLED=false

# Email Configuration
# NOTIFICATION__EMAIL_SMTP_HOST=smtp.gmail.com
# NOTIFICATION__EMAIL_SMTP_PORT=587
# NOTIFICATION__EMAIL_FROM=noreply@company.com
# NOTIFICATION__EMAIL_USERNAME=your-email@company.com
# NOTIFICATION__EMAIL_PASSWORD=your-app-password

# Slack Configuration
# NOTIFICATION__SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# NOTIFICATION__SLACK_CHANNEL=#testing-alerts

# Microsoft Teams Configuration
# NOTIFICATION__TEAMS_WEBHOOK_URL=https://company.webhook.office.com/webhookb2/YOUR-WEBHOOK-URL

# =============================================================================
# CI/CD INTEGRATION
# =============================================================================

# Version Control System Webhooks
# VCS_WEBHOOK_SECRET=your-secure-webhook-secret

# GitHub Integration
# GITHUB_TOKEN=ghp_your-github-personal-access-token
# GITHUB_WEBHOOK_SECRET=your-github-webhook-secret

# GitLab Integration
# GITLAB_TOKEN=glpat-your-gitlab-access-token
# GITLAB_WEBHOOK_SECRET=your-gitlab-webhook-secret

# Jenkins Integration
# JENKINS_URL=https://jenkins.company.com
# JENKINS_USER=jenkins-user
# JENKINS_TOKEN=jenkins-api-token

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
API__HOST=0.0.0.0
API__PORT=8000
API__WORKERS=4
API__RELOAD=false

# API Authentication
API__AUTH_ENABLED=false
# API__JWT_SECRET=your-jwt-secret-key
# API__JWT_ALGORITHM=HS256
# API__JWT_EXPIRATION=3600

# =============================================================================
# WEB DASHBOARD CONFIGURATION
# =============================================================================
DASHBOARD__ENABLED=true
DASHBOARD__PORT=3000
DASHBOARD__HOST=localhost

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOGGING__LEVEL=INFO
LOGGING__FORMAT=json
LOGGING__FILE_ENABLED=true
LOGGING__FILE_PATH=logs/agentic-testing.log
LOGGING__MAX_FILE_SIZE=10MB
LOGGING__BACKUP_COUNT=5

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development mode
DEV_MODE=false

# Property-based testing settings
HYPOTHESIS__MAX_EXAMPLES=100
HYPOTHESIS__DEADLINE=None
HYPOTHESIS__VERBOSITY=normal

# Test execution settings
PYTEST__VERBOSITY=1
PYTEST__PARALLEL=auto
PYTEST__COVERAGE=true

# =============================================================================
# QUICK SETUP EXAMPLES
# =============================================================================

# Example 1: Amazon Q Developer Pro with SSO (Recommended)
# 1. Configure AWS SSO: aws configure sso --profile my-sso-profile
# 2. Set AWS_PROFILE=my-sso-profile
# 3. Set LLM__PROVIDER=amazon_q
# 4. Run: aws sso login --profile my-sso-profile

# Example 2: Kiro AI with OAuth2 SSO
# 1. Get OAuth2 credentials from Kiro dashboard
# 2. Set KIRO__CLIENT_ID and KIRO__CLIENT_SECRET
# 3. Set LLM__PROVIDER=kiro

# Example 3: OpenAI (Simple setup)
# 1. Get API key from OpenAI dashboard
# 2. Set OPENAI__API_KEY=sk-your-key
# 3. Set LLM__PROVIDER=openai

# Example 4: Multi-provider setup (fallback)
# 1. Configure multiple providers above
# 2. System will fallback if primary provider fails